            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:textSize="14sp"
            android:inputType="text"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- pendidikan-->
    <TextView
        android:id="@+id/tv_pendidikan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Pendidikan Terakhir"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/tv_bahan_bakar_layout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_pendidikan_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pendidikan"
        app:startIconDrawable="@drawable/edu_24"

        >
        <EditText
            android:id="@+id/et_pendidikan"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:textSize="14sp"
            android:inputType="text"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <!-- aset-->
    <TextView
        android:id="@+id/tv_aset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Jumlah Aset"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/tv_pendidikan_layout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_aset_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_aset"
        app:startIconDrawable="@drawable/asset"

        >
        <EditText
            android:id="@+id/et_aset"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:textSize="14sp"
            android:inputType="text"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- berobat-->
    <TextView
        android:id="@+id/tv_berobat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Kemampuan Berobat"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/tv_aset_layout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_berobat_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_berobat"
        app:startIconDrawable="@drawable/healthcare_24"

        >
        <EditText
            android:id="@+id/et_berobat"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:textSize="14sp"
            android:inputType="text"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- tanggungan-->
    <TextView
        android:id="@+id/tv_tanggungan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Jumlah Tanggungan"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/tv_berobat_layout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_tanggungan_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tanggungan"
        app:startIconDrawable="@drawable/ic_tanggungan"

        >
        <EditText
            android:id="@+id/et_tanggungan"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:textSize="14sp"
            android:inputType="text"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btn_ajukan_bantuan"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:backgroundTint="@color/blue"
        android:text="Ajukan Bantuan"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tv_tanggungan_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

<!--    app:layout_constraintTop_toBottomOf="@+id/tv_income_layout"-->

    <!--guidelines-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vert_guideline_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="205dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vert_guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guideline_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="365dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>